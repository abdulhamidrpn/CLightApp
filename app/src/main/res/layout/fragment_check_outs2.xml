<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_120sdp"
    android:background="@drawable/background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/numpadlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/cardviewlayout"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentTop="true"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_centerInParent="true">
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="@dimen/_53sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/num1"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num4"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num7"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/numdot"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn_circle"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="@dimen/_53sdp"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ll1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/num2"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num5"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num8"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num0"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_53sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ll2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/num3"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num6"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/num9"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/numC"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/btn"
                            android:gravity="center"
                            android:text="C"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cardviewlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_above="@+id/belowlay"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="#90000000"
                        app:cardCornerRadius="@dimen/_12sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/et_amount"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/edittext"
                                android:gravity="center"
                                android:hint="Amount"
                                android:inputType="numberDecimal"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/recieptno"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_below="@+id/et_amount"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/edittext"
                                android:gravity="center"
                                android:hint="Description/Name"
                                android:singleLine="true"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/button"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:background="@drawable/add_new"
                    android:gravity="center"
                    android:text="ADD ITEM"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/delete_new"
                    android:gravity="center"
                    android:text="CHECKOUT"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/belowlay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_above="@+id/footerLay"
                android:layout_marginBottom="@dimen/_5sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/clearout"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/clear_out_new"
                            android:gravity="center"
                            android:text="CLEAR OUT"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/btcRateTextview"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/edittextroundforcheckoutpage1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:hint="$10918.89=1BTC/USD"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/footerLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/footer"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:background="@drawable/footerbg"
                    android:gravity="center"
                    android:text="@string/bottomLine"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp"
                    />
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>